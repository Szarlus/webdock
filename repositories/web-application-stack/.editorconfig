root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{css,less,scss}]

[*.feature]
indent_size = 2

[*.{html,xml}]

[*.{js,json}]

[*.md]
trim_trailing_whitespace = false

[*.php]

[*.ts]

[*.{yaml,yml}]
indent_size = 2

[Makefile]
indent_style = tab
