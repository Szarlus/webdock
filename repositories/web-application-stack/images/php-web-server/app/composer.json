{
    "autoload": {
        "psr-4": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "monolog/monolog": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "@build"
        ],
        "post-update-cmd": [
            "@build"
        ],
        "build": [
            "echo 'building...'"
        ],
        "test": [
            "vendor/bin/phpunit --testsuite 'Unit Tests Suite'"
        ]
    }
}
