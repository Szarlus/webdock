# See editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{css,less,scss}]
indent_size = 2

[Dockerfile]

[*.feature]
indent_size = 2

[*.{html,xml}]

[*.ini]

[*.{js,json}]
indent_size = 2

[{makefile,Makefile,GNUmakefile}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.php]

[*.sh]

[*.ts]

[*.{yaml,yml}]
indent_size = 2

[VERSION]
insert_final_newline = false
